%h1 Usuarios

- unless flash[:notice].blank?
    .alert.alert-success
        %h4= flash[:notice]
- unless flash[:error].blank?
    .alert.alert-danger
        %h4= flash[:error]

%a.btn.btn-primary{href: url(:users, :new)} 
    %span.glyphicon.glyphicon-plus
    Nuevo usuario

%table.table.table-condensed
    %thead
        %tr
            %th ID
            %th Nombre
            %th Edad
            %th Creaci√≥n
            %th
    %tbody
        - @users.each do |user|
            %tr
                %td= user.id
                %td= user.name
                %td= user.age
                %td= l user.created_at
                %td
                    %a.btn.btn-success.btn-xs{href: url(:users, :edit, user.id)}
                        %span.glyphicon.glyphicon-edit
                        Editar
                    = link_to url(:users, :destroy, user.id, csrf_token), method: :delete, class: "btn btn-danger btn-xs" do
                        %span.glyphicon.glyphicon-trash